<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alxarguello.apps.todocheck">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.alxarguello.apps.todocheck.TodoApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.alxarguello.apps.todocheck.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alxarguello.apps.todocheck.ui.activities.EditItemActivity"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>